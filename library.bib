keywords = {HIV-1 Gag matrix domain,Human immunodeficiency virus,PIP2,Protein-RNA interaction,Protein-membrane interaction},
number = {5},
pages = {184157},
pmid = {37028700},
publisher = {Elsevier B.V.},
title = {{HIV-1 Gag specificity for PIP2 is regulated by macromolecular electric properties of both protein and membrane local environments}},
