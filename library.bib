journal = {Langmuir},
number = {21},
pages = {6051--6062},
pmid = {29727193},
title = {{Myristoylation and Oligonucleotide Interaction Modulate Peptide and Protein Surface Properties: The Case of the HIV-1 Matrix Domain}},
